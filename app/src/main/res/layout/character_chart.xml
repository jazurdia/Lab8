<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewvar"
        android:layout_width="190dp"
        android:layout_height="181dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/varName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/varName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Apellido"
        android:textSize="40dp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="@+id/imageViewvar"
        app:layout_constraintStart_toEndOf="@+id/imageViewvar"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"



        tools:layout_editor_absoluteX="245dp"
        />

    <TextView
        android:id="@+id/varRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="race"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toStartOf="@+id/status"
        app:layout_constraintStart_toStartOf="@+id/varName"
        app:layout_constraintTop_toBottomOf="@+id/varName"


        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@+id/varRace"
        app:layout_constraintStart_toEndOf="@+id/varRace"
        app:layout_constraintEnd_toEndOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>